<Window x:Class="Game_Sorry.Card10Prompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Sorry"
        mc:Ignorable="d"
        Title="Choose an option" Height="200" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="move10Button" Grid.Column="0" Click="Move10Button_OnClick" Content="Move 10 spaces" Grid.Row="1"/>
        <Button x:Name="moveBackButton" Click="moveBackButton_OnClick" Content="Move Back A Space" Grid.Column="1" Grid.Row="1"/>
        <Label Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="You drew an 10, please choose one of the following options:"/>
    </Grid>
</Window>
